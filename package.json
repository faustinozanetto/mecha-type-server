{
  "name": "mecha-type-backend",
  "version": "0.2.8",
  "description": "Backend for Mecha Type",
  "main": "index.js",
  "author": "Faustino Zanetto",
  "license": "ISC",
  "scripts": {
    "postinstall": "npm run build",
    "prebuild": "rimraf dist",
    "build": "nest build && npm run prisma:generate",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "start:migrate:prod": "prisma migrate deploy && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "migrate:reset": "prisma migrate reset",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "lint-staged": {
    "*.(js|jsx|json|ts|tsx|html)": [
      "prettier --write"
    ],
    "*.(ts|tsx)": [
      "eslint --fix --cache"
    ]
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.5",
    "@nestjs/axios": "^0.0.6",
    "@nestjs/common": "8.3.1",
    "@nestjs/config": "1.2.0",
    "@nestjs/core": "8.3.1",
    "@nestjs/graphql": "10.0.5",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "8.3.1",
    "@prisma/client": "3.10.0",
    "@quixo3/prisma-session-store": "^3.1.3",
    "apollo-server": "3.6.3",
    "apollo-server-express": "^3.6.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csv-parse": "^5.0.4",
    "dataloader": "^2.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "faker": "^6.6.6",
    "firebase-admin": "^10.0.2",
    "graphql": "^16.3.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.14.1",
    "nestjs-prisma": "^0.15.1",
    "nestjs-session": "^2.0.0",
    "passport": "^0.5.2",
    "passport-discord": "^0.1.4",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^2.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "0.0.9",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.1",
    "@nestjs/schematics": "^8.0.7",
    "@nestjs/testing": "^8.3.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/faker": "^6.6.8",
    "@types/graphql-fields": "^1.3.4",
    "@types/jest": "^27.4.1",
    "@types/node": "17.0.21",
    "@types/passport-discord": "^0.1.5",
    "@types/pg": "^8.6.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "chance": "1.1.8",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "prettier": "2.5.1",
    "prisma": "3.10.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
